{
  "name": "transmogrifier-extension",
  "version": "0.5.7",
  "description": "Microsoft Edge extension that transmogrifies web pages for better focus and readability",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "test": "vitest run",
    "update": "node scripts/npm-env.mjs update",
    "lint": "eslint src --ext .ts",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.28",
    "@eslint/js": "^9.19.0",
    "@types/chrome": "^0.0.287",
    "eslint": "^9.19.0",
    "fake-indexeddb": "^6.2.5",
    "rimraf": "^6.0.1",
    "sharp": "^0.34.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.1.0",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "edge-extension",
    "browser-extension",
    "focus-mode",
    "reading-mode",
    "dom-manipulation"
  ],
  "license": "MIT",
  "dependencies": {
    "@kypflug/transmogrifier-core": "^0.1.26"
  }
}
